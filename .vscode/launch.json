{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Fastify Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/modett",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--import",
        "tsx",
        "--inspect"
      ],
      "args": ["apps/api/src/index.ts"],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/modett/node_modules/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "smartStep": true,
      "autoAttachChildProcesses": true
    },
    {
      "name": "Debug Current File",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/modett",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "runtimeArgs": ["--loader", "tsx"],
      "console": "integratedTerminal"
    }
  ]
}
