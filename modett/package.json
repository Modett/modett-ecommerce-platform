{
  "name": "modett",
  "version": "1.0.0",
  "description": "Modular monolithic architecture using TypeScript and Fastify.",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch apps/api/src/index.ts",
    "dev:api": "tsx watch apps/api/src/index.ts",
    "dev:web": "cd apps/web && npm run dev",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:debug": "tsx watch --inspect=9229 apps/api/src/index.ts",
    "build": "tsc",
    "build:web": "cd apps/web && npm run build",
    "start": "node dist/apps/api/src/index.js",
    "start:web": "cd apps/web && npm run start",
    "test": "vitest",
    "lint": "eslint . --ext .ts --fix",
    "db:generate": "prisma generate --schema=prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=prisma/schema.prisma",
    "db:seed": "tsx prisma/seed.ts",
    "db:cleanup": "tsx prisma/cleanup-catalog.ts",
    "db:studio": "prisma studio --schema=prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@prisma/client": "^6.16.1",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "nodemailer": "^7.0.6",
    "payable-ipg-js": "^4.1.4",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.1",
    "redis": "^5.8.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.4.0",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
